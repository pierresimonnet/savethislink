{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1 class="text-center">S'inscrire</h1>

    <div class="form-no-modal"> 
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        <div class="input-group">
            {{ form_label(registrationForm.username) }}
            {{ form_widget(registrationForm.username) }}
            {{ form_help(registrationForm.username) }}
            <div class="input-error">
                {{ form_errors(registrationForm.username) }}
            </div>
        </div>

        <div class="input-group">
            {{ form_label(registrationForm.password) }}
            {{ form_widget(registrationForm.password) }}
            {{ form_help(registrationForm.password) }}
            <div class="input-error">
                {{ form_errors(registrationForm.password) }}
            </div>
        </div>

        <div class="d-flex justify-flex-end">
            <button type="submit" class="button-primary">S'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
