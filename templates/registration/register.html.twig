{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        <div class="input-group">
            {{ form_label(registrationForm.username) }}
            {{ form_widget(registrationForm.username) }}
            <div class="help-text">{{ form_help(registrationForm.username) }}</div>
            <div class="input-error">
                {{ form_errors(registrationForm.username) }}
            </div>
        </div>

        <div class="input-group">
            {{ form_label(registrationForm.password) }}
            {{ form_widget(registrationForm.password) }}
            <div class="help-text">{{ form_help(registrationForm.password) }}</div>
            <div class="input-error">
                {{ form_errors(registrationForm.password) }}
            </div>
        </div>

        <div class="d-flex justify-flex-end">
            <button type="submit" class="button-primary">Register</button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
