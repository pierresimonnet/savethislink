<form method="post" action="{{ path('topic_delete', {'id': theme.id}) }}" onsubmit="return confirm('Are you sure you want to delete this topic ?');" class="form-delete">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
    <button class="button-secondary">{{ icon('trash') }}<span>Delete</span></button>
</form>
