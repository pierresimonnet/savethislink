{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}

{% block body %}
    <h1>{{ theme.title }}</h1>
    <p>By {{ theme.owner.username }}</p>
    <p>{{ theme.description }}</p>
    {% if app.user and app.user == theme.owner %}
        <a href="{{ path('theme_edit', {'id': theme.id}) }}" class="button-secondary">{{ icon('edit') }} Edit</a>
        {{ include('theme/_delete_form.html.twig') }}
    {% endif %}

    <h2>Websites in {{ theme.title }}</h2>    
    <div id='app' data-ressource="websites" data-theme={{ theme.id }}></div>
{% endblock %}
