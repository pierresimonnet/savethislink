{% extends 'base.html.twig' %}

{% block title %}{{ theme.title }}{% endblock %}

{% block body %}
    <div class="hero-section">
        <h1>{{ theme.title }}</h1>
        <p class="text-muted">By <a href="{{ path('user_profile', {'username': theme.owner.username}) }}" class="decorated">{{ theme.owner.username }}</a></p>
        <p class="p-margin">{{ theme.description }}</p>
        <p>This theme is {% if theme.open %}open{% else %}closed{% endif %} to contributions</p>
        {% if app.user and app.user == theme.owner %}
        <div class="mt-1">
            <a href="{{ path('theme_edit', {'id': theme.id}) }}" class="button-secondary">{{ icon('edit') }} <span>Edit</span></a>
            {{ include('theme/_delete_form.html.twig') }}
        </div>
        {% endif %}
    </div>

    <div id='app' data-ressource="websites" data-theme={{ theme.id }} data-owner={{ theme.owner.id }} data-open={{ theme.open ? 1 : 0 }}></div>
{% endblock %}
