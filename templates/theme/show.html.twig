{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}

{% block body %}
    <a href="{{ path('theme_index') }}">back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ theme.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ theme.description }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ theme.owner.username }}</td>
            </tr>
        </tbody>
    </table>
    
    {% if app.user and app.user == theme.owner %}
        <a href="{{ path('theme_edit', {'id': theme.id}) }}">edit</a>
        {{ include('theme/_delete_form.html.twig') }}
        <a href="{{ path('website_new', {'slug': theme.slug}) }}">Add a website</a>
    {% endif %}

    <div id='app' data-ressource="websites" data-theme={{ theme.id }}></div>
{% endblock %}
