{% extends 'base.html.twig' %}

{% block title %}Website{% endblock %}

{% block body %}
    <a href="{{ path('website_index') }}">back to list</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Url</th>
                <td>{{ website.url }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ website.comment }}</td>
            </tr>
        </tbody>
    </table>

    {% if app.user and app.user == website.owner %}
        <a href="{{ path('website_edit', {'id': website.id}) }}">edit</a>
        {{ include('website/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
